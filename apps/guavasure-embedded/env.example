# Shopify App Configuration
SHOPIFY_CLIENT_ID=your_SHOPIFY_CLIENT_ID_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here

# Server Configuration
PORT=3000
NODE_ENV=development
HOST=localhost:3000

# Shopify OAuth
SCOPES=read_products,write_products,read_orders,write_orders,read_customers,write_customers

# Database (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/guavasure

# Redis (for session storage in production)
# REDIS_URL=redis://localhost:6379

# Payment Gateway (mock for now)
# PAYMENT_GATEWAY_KEY=your_payment_gateway_key
# PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret

# Guavasure API (your insurance API)
# GUAVASURE_API_URL=https://api.guavasure.com
# GUAVASURE_API_KEY=your_guavasure_api_key

# Frontend (Vite)
VITE_API_URL=http://localhost:3000

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_CART_BANNER=true
ENABLE_CHECKOUT_BANNER=false
ENABLE_POST_PURCHASE=false

# Analytics
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
# SEGMENT_WRITE_KEY=your_segment_key

