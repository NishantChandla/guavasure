{
  "name": "@guavasure/guavasure-embedded",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "nx": {
    "name": "guavasure-embedded",
    "targets": {
      "api:build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "apps/guavasure-embedded/dist",
          "bundle": false,
          "main": "apps/guavasure-embedded/src/main.ts",
          "tsConfig": "apps/guavasure-embedded/tsconfig.app.json",
          "assets": [],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/apps/guavasure-embedded/dist/package.json",
          "{workspaceRoot}/apps/guavasure-embedded/dist/package-lock.json"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/apps/guavasure-embedded/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "api:serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "api:build"
        ],
        "options": {
          "buildTarget": "guavasure-embedded:api:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "guavasure-embedded:api:build:development"
          },
          "production": {
            "buildTarget": "guavasure-embedded:api:build:production"
          }
        }
      }
    }
  },
  "dependencies": {
    "@shopify/shopify-api": "^9.0.0",
    "@shopify/shopify-app-express": "^6.0.1",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0"
  },
  "scripts": {
    "shopify:admin:dev": "cd src/shopify && npm run admin:dev",
    "shopify:admin:build": "cd src/shopify && npm run admin:build",
    "shopify:app:build": "cd src/shopify && npm run app:build",
    "shopify:app:deploy": "cd src/shopify && npm run app:deploy",
    "shopify:app:dev": "cd src/shopify && npm run app:dev"
  }
}
