{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": false,
    "emitDeclarationOnly": false,
    "declaration": false,
    "declarationMap": false,
    "noEmit": false,
    "noImplicitReturns": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/extensions/**/*",
    "src/frontend/**/*"
  ]
}
